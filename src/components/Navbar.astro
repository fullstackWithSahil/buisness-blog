---
import { Image } from "astro:assets";
import logo from "../../public/logo.png";
import { ModeToggle } from "./Modetoggle";
import MoblieNav from "./MoblieNav.tsx";
---

<header>
  <nav
    class="bg-blue-700 text-white py-1 flex items-center px-3 justify-between dark:bg-black"
  >
    {/* logo */}
    <div class="flex items-center gap-2">
      <Image src={logo} alt="logo" class="sm:w-16 w-8" />
      <div class="flex flex-col">
        <p class="sm:text-3xl text-lg font-semibold">Buisnesstools</p>
        <p class="sm:text-sm text-xs hidden sm:block">
          Your All-in-One Solution for Online Prosperity.
        </p>
      </div>
    </div>

    <div class="flex sm:w-[calc(95vw-4rem)] w-1/3 items-center justify-around">
      <MoblieNav client:load />

      {/* nav as */}
      <ul class="sm:flex capitalize items-center gap-4 mx-8 hidden">
        <li><a href={"/blog"}>Blog</a></li>
        <li><a href={"/documentation"}>Documentation</a></li>
      </ul>

      <ModeToggle client:load />
    </div>
  </nav>
</header>
