---
import { Image } from "astro:assets";
import { Button } from "./button";
const { img,alt,link,title,list } = Astro.props;
---

<section class="flex flex-wrap p-2 justify-around border-2 border-black dark:border-white">
    <Image src={img} alt={alt} class="w-full sm:w-1/3"/>
    <div class="flex flex-col items-center w-full sm:w-1/3">
        <h1 class="text-3xl">
            {title}
        </h1>
        <ul class="text-lg list-disc">
            {list.map((line:string)=><li>
                {line}
            </li>)}
        </ul>
        <Button>
            <a href={`/blog/${link}`}>
                Click here read the complete blog
            </a>
        </Button>
    </div>
</section>